{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "linebreak-style": "off",
    "react/prop-types": "off",
    "import/no-extraneous-dependencies": 0,
    "import/extensions": [
      "error",
      "ignorePackages"
    ]
  }
}
